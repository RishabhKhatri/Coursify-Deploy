<% provide(:title, "New Course") %>

<div class="row">
  <div class="col-xs-2">
    <%= render 'institutes/menu' %>
  </div>
  <div class="col-xs-10">
    <div class="signup-panel panel panel-default">
      <div class="panel-body">
        <h1 style="text-align: center;font-weight: 300;">New Course</h1>
        <%= form_for(@course, :html => {class: 'form-horizontal'}) do |f| %>

        <%= render 'shared/courses_error_messages', class: 'form-control' %>

          <div class="form-group">
            <%= f.label :name, class: 'control-label col-sm-3' %>
            <div class="col-sm-9">
              <%= f.text_field :name, class: 'form-control', placeholder: "Name" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label "Course Code", class: 'control-label col-sm-3' %>
            <div class="col-sm-9">
              <%= f.text_field :code, class: 'form-control', placeholder: "Course Code" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label "Start Date", class: 'control-label col-sm-3' %>
            <div class="col-sm-9">
              <%= f.date_field :start_date, class: 'form-control', placeholder: "Start Date" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label "End Date", class: 'control-label col-sm-3' %>
            <div class="col-sm-9">
              <%= f.date_field :end_date, class: 'form-control', placeholder: "End Date" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :summary, class: 'control-label col-sm-3' %>
            <div class="col-sm-9">
              <%= f.text_field :summary, class: 'form-control', placeholder: "Course Summary" %>
            </div>
          </div>

          <div class="col-sm-offset-3 col-sm-9">
            <%= f.submit "Create course", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% provide(:title, "Sign In") %>

<div class="panel panel-default">
  <div class="login-panel panel-body">
    <h1>Sign in</h1>
    <ul>
      <li><%= link_to '<i class="fa fa-facebook-official" aria-hidden="true"></i> Sign in Facebook'.html_safe, '/auth/facebook', class: 'btn btn-default btn-lg' %></li>
      <li><%= link_to '<i class="fa fa-google" aria-hidden="true"></i> Sign in with Google'.html_safe, '/auth/google', class: 'btn btn-default btn-lg' %></li>
      <li><%= link_to '<i class="fa fa-sign-in" aria-hidden="true"></i> Sign in with Coursify credentials'.html_safe, cas_login_path, class: 'btn btn-default btn-lg' %></li>
    </ul>
  </div>
  Forgot your Coursify credentials? Reset your password <%= link_to 'here', new_password_reset_url(subdomain: 'accounts') %>
  <br>
  Don't have an account? Sign Up <%= link_to 'here', signup_url(subdomain: 'accounts') %>
</div>

<% provide(:title, "Update Profile - Student") %>

<div class="row">
  <div class="col-lg-6 col-md-offset-3">
    <div class="signup-panel panel panel-default">
      <div class="panel-body">
        <h1 style="text-align: center;font-weight: 300;">Update Profile</h1>
        <%= form_for(@student, :html => {class: 'form-horizontal'}) do |f| %>

        <%= render 'shared/student_error_messages', class: 'form-control' %>

          <div class="form-group">
            <%= f.label :name, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
              <%= f.text_field :name, class: 'form-control', placeholder: "Name" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :email, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
              <%= f.email_field :email, class: 'form-control', placeholder: "E-mail" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label "Born on", class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
              <%= f.date_field :dob, class: 'form-control', placeholder: "DOB" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :contact, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
              <%= f.text_field :contact, class: 'form-control', placeholder: "Contact" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
              <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Confirmation", class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Password Confirmation" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :picture, "Profile pic", class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
              <span class="picture">
                <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
              </span>
            </div>
          </div>

          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Save Changes", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('#student_picture').bind('change', function() {
  var size_in_megabytes = this.files[0].size/1024/1024;
  if (size_in_megabytes > 5) {
    alert('Maximum file size is 5MB. Please choose a smaller file.');
  }
  });
</script>

<% provide(:title, "Sign Up - Student") %>

<div class="row">
  <div class="col-lg-6 col-md-offset-3">
    <div class="signup-panel panel panel-default">
      <div class="panel-body">
        <h1 style="text-align: center;font-weight: 300;">Sign Up - Student Account</h1>
        <%= form_for(@student, url: student_signup_path, :html => {class: 'form-horizontal'}) do |f| %>

        <%= render 'shared/student_error_messages', class: 'form-control' %>

          <div class="form-group">
            <%= f.label :name, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
              <%= f.text_field :name, class: 'form-control', placeholder: "Name" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :email, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
              <%= f.email_field :email, class: 'form-control', placeholder: "E-mail" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label "Born on", class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
              <%= f.date_field :dob, class: 'form-control', placeholder: "DOB" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :contact, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
              <%= f.telephone_field :contact, class: 'form-control', placeholder: "Contact" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
              <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Confirmation", class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Password Confirmation" %>
            </div>
          </div>

          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Create my account", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

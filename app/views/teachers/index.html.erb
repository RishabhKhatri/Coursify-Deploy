<% provide(:title, "Admin - All Teachers") %>

<div class="index_panel panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title">For Admin user only</h1>
  </div>
  <div class="panel-body">
    <ul style="list-style-type: none;">
      <table class="table table-hover">
        <tbody>
          <thead>
            <tr>
              <!-- <th>Profile</th> -->
              <th>Name</th>
              <th>Email</th>
              <th>Expertise</th>
              <th>Contact</th>
              <% if current_teacher.admin? %>
                <th>Delete</th>
              <% end %>
            </tr>
          </thead>
          <% @teachers.each do |teacher| %>
            <tr>
              <li>
                <!-- <td><%= image_tag teacher.picture.url, class: 'index_picture' if teacher.picture? %></td> -->
                <td><%= teacher.name %></td>
                <td><%= teacher.email %></td>
                <td><%= teacher.expertise %></td>
                <td><%= teacher.contact %></td>
                <% if current_teacher.admin? %>
                  <td><%= link_to 'Delete', teacher, method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: "Are you sure?"} %></td>
                <% end %>
              </li>
            </tr>
          <% end %>
        </tbody>
      </table>
    </ul>
  </div>
</div>

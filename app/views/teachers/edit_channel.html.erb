<% provide(:title, "Join Institute Channel") %>

<div class="row">
  <div class="col-lg-6 col-md-offset-3">
    <div class="signup-panel panel panel-default">
      <div class="panel-body">
        <h1 style="text-align: center;font-weight: 300;">Join Institute Channel</h1>
        <%= form_for(@teacher, :html => {class: 'form-horizontal'}) do |f| %>

        <%= render 'shared/error_messages', class: 'form-control' %>

          <% if @teacher.institute_id.nil? %>
            <div class="form-group">
              <%= f.label :institute, class: 'control-label col-sm-2' %>
              <div class="col-sm-10">
                <%= f.collection_select :institute_id, Institute.order(:name), :id, :name, {include_blank: true}, {class: 'form-control'} %>
              </div>
            </div>
          <% end %>

          <% if @teacher.institute_id.nil? %>
            <div class="form-group">
              <div class="col-sm-10 col-sm-offset-2">
                <p>Can't find your Institute in the list? Create your Institute's channel <%= link_to 'here', new_institute_path %>.</p>
              </div>
            </div>
          <% end %>

          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Join", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

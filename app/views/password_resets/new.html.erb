<% provide(:title, "Forgot Password") %>

<div class="row">
  <div class="col-lg-6 col-md-offset-3">
    <div class="signup-panel panel panel-default">
      <div class="panel-body">
        <h1 style="text-align: center;font-weight: 300;">Forgot Password</h1>
        <%= form_for(:password_reset, url: password_resets_path, :html => {class: 'form-horizontal'}) do |f| %>

          <div class="form-group">
            <%= f.label :email, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
              <%= f.email_field :email, class: 'form-control', placeholder: "E-mail" %>
            </div>
          </div>

          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Submit", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

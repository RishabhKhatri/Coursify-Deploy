<% provide(:title, "Reset Password") %>

<div class="row">
  <div class="col-lg-6 col-md-offset-3">
    <div class="signup-panel panel panel-default">
      <div class="panel-body">
        <h1 style="text-align: center;font-weight: 300;">Reset Password</h1>
        <%= form_for(@user, url: password_reset_path, :html => {class: 'form-horizontal'}) do |f| %>

        <%= render 'shared/user_error_messages', class: 'form-control' %>

          <%= hidden_field_tag :email, @user.email %>

          <div class="form-group">
            <%= f.label :password, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
              <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Confirmation", class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Password Confirmation" %>
            </div>
          </div>

          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Update Password", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
